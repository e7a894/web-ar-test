{
  "extends": ["@nuxtjs/eslint-config-typescript"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "error",
    "no-unused-vars": "off",
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", "never"],
    "vue/singleline-html-element-content-newline": [
      "error",
      { "ignoreWhenNoAttributes": true }
    ]
  }
}
